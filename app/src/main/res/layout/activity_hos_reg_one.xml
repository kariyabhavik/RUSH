<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hos_reg_one">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="381dp"
        android:layout_height="543dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="166dp"
                android:layout_height="104dp"
                android:layout_marginLeft="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hospital" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Register a Hospital"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.462"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="55dp"
                android:text="Hospital Name"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_hospital"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="name"
                android:inputType="textPersonName"
                android:outlineAmbientShadowColor="@color/black" />


            <RadioButton
                android:id="@+id/rb_gov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="goverment " />

            <RadioButton
                android:id="@+id/rb_pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-48dp"
                android:text="private" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="50dp"
                android:text="Hospital Registration Number"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/ethos_reg_num"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:hint="Reg Number"
                android:inputType="textPersonName"
                android:outlineAmbientShadowColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="50dp"
                android:text=" Health Care Provider Type:"
                android:textColor="@color/black" />

            <CheckBox
                android:id="@+id/cb_emergency_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Emergency room" />

            <CheckBox
                android:id="@+id/cb_icu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="ICU" />

            <CheckBox
                android:id="@+id/cb_24hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="24HRS Online" />

            <CheckBox
                android:id="@+id/cb_clinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="CLINIC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="50dp"
                android:text="Hospital Mail Id"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_mailid"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:hint="Mail"
                android:inputType="textPersonName"
                android:outlineAmbientShadowColor="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="50dp"
                android:text="Telephone Number"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_telephone_number"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:hint="Number"
                android:inputType="textPersonName"
                android:outlineAmbientShadowColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="50dp"
                android:text="Correct Adress"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:hint="Adress"
                android:inputType="textPersonName"
                android:outlineAmbientShadowColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="50dp"
                android:text="Google Map Co-ordinates LAT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_location_LAT"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:hint="Latitude"
                android:inputType="textPersonName"
                android:outlineAmbientShadowColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="50dp"
                android:text="Google Map Co-ordinates LON"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_address_LON"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:hint="Longitude"
                android:inputType="textPersonName"
                android:outlineAmbientShadowColor="@color/black" />


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/registerbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.537" />

</androidx.constraintlayout.widget.ConstraintLayout>